PORT=5000

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/almadinah-boutique?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=votre_jwt_secret_tres_securise_ici

# Frontend URL
